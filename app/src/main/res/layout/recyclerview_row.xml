<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:alpha="0.9"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/textViewEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="Editar" />


        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="52dp"
            app:srcCompat="@drawable/edit_icon"
            android:contentDescription="edit_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="50dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/profile_pic"
            android:contentDescription="imageUser" />

        <TextView
            android:id="@+id/textViewNrRefeicoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:text="TextView"
            android:textColor="#21AEFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStock"
            android:layout_width="242dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:text="TextView"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>